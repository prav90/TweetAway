<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/primary_app_color</item>
    </style>

    <style name="TweetAwayTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary_app_color</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/UserHomeTextAppearence</item>
    </style>

    <style name="UserHomeTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="UserProfileTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
    </style>

</resources>
